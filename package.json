{
  "name": "canto-transcriber",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "format:client": "biome format ./app/*.tsx ./app/**/*.tsx --write",
    "build:client": "remix build",
    "format:server": "biome format ./src/*.ts ./src/**/*.ts --write",
    "build:server": "tsup --platform=node --format=cjs --sourcemap ./src/**/*.ts ./src/*.ts",
    "dev:server": "nodemon --watch ./src --ext ts --exec \"npm run build:server && npm run start\"",
    "clean": "rimraf ./dist ./build",
    "dev": "remix dev -c \"npm run dev:server\"",
    "build": "npm run build:client && npm run build:server",
    "start": "node dist/main.js"
  },
  "dependencies": {
    "@nestjs/common": "^10.0.0",
    "@nestjs/core": "^10.0.0",
    "@nestjs/platform-express": "^10.0.0",
    "@remix-run/css-bundle": "^2.5.1",
    "@remix-run/express": "^2.5.1",
    "@remix-run/node": "^2.5.1",
    "@remix-run/react": "^2.5.1",
    "express": "^4.18.2",
    "isbot": "^4.4.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.8.1"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.5.3",
    "@remix-run/dev": "^2.5.1",
    "@remix-run/server-runtime": "^2.5.1",
    "@swc-node/register": "^1.6.8",
    "@swc/core": "^1.3.106",
    "@types/express": "^4.17.17",
    "@types/node": "^20.3.1",
    "@types/react": "^18.2.20",
    "@types/react-dom": "^18.2.7",
    "nodemon": "^3.0.3",
    "rimraf": "^5.0.5",
    "tsup": "^8.0.1",
    "typescript": "^5.1.3"
  },
  "volta": {
    "node": "18.19.0",
    "pnpm": "8.14.3"
  }
}
